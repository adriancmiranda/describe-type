---
root: true
parser: esprima
extends: airbnb-base/legacy
env:
  browser: true

parserOptions:
  sourceType: module

settings:
  import/resolver:
    babel-module: {}

rules:
  semi-style: off
  no-tabs: off
  no-debugger: 2
  no-bitwise: off
  vars-on-top: off
  no-control-regex: off
  no-multi-assign: off
  no-param-reassign: off
  no-restricted-globals: off
  no-self-compare: off

  comma-dangle:
    - warn
    - always-multiline

  indent:
    - 2
    - tab
    - SwitchCase: 1
